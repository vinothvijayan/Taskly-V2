rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // NEW: Rule for chat attachments
    // Allows read/write if the user is one of the two participants in the chat room.
    match /chat_attachments/{chatRoomId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                           (request.auth.uid == chatRoomId.split('_')[0] || 
                            request.auth.uid == chatRoomId.split('_')[1]);
    }

    // Rule for the AI Wellness Coach feature
    match /journal-audio/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for journal PDF exports
    match /journal-exports/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Your existing rule for Meetly
    match /meetly-audio/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Your other existing rules
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /teams/{teamId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}