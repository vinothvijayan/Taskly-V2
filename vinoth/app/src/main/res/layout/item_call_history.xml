<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Date and Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/historyItemDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_calendar_today_24"
            app:drawableTint="@color/text_label_color"
            tools:text="5/7/2025" />

        <TextView
            android:id="@+id/historyItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/baseline_access_time_24"
            app:drawableTint="@color/text_label_color"
            tools:text="05:30 AM" />
    </LinearLayout>

    <!-- Initial Feedback -->
    <TextView
        android:id="@+id/historyItemSpokenToName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="Spoke with: Jane Doe"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/label_feedback"
        android:textColor="@color/text_label_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/historyItemFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/chip_background"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textColor="@color/chip_default_text"
        android:textStyle="bold"
        tools:text="Interested" />

    <!-- Initial Spoken To Name -->

    <!-- Initial Message -->
    <TextView
        android:id="@+id/historyItemMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/label_message"
        android:textColor="@color/text_label_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/historyItemMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Interested in bulk order" />

    <!-- Follow-up Details Container -->
    <LinearLayout
        android:id="@+id/followUpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Follow-up Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_follow_up_status"
            android:textColor="@color/text_label_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/historyItemFollowUpStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/chip_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/chip_default_text"
            android:textStyle="bold"
            tools:text="Not Interested" />

        <!-- NEW: Follow-up Spoken To Name -->
        <TextView
            android:id="@+id/historyItemFollowUpSpokenToName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textStyle="italic"
            tools:visibility="visible"
            tools:text="Spoke with: John Smith" />

        <!-- Follow-up Message -->
        <TextView
            android:id="@+id/historyItemFollowUpMessageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_follow_up_message"
            android:textColor="@color/text_label_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/historyItemFollowUpMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="no requirement" />

        <!-- Follow-up Date & Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_follow_up_date_time"
            android:textColor="@color/text_label_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/historyItemFollowUpDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="6/2/2025 at 02:13 PM" />

    </LinearLayout>

</LinearLayout>